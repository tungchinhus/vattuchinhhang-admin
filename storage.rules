rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /products/{allPaths=**} {
      allow read: if true;                // ảnh sản phẩm đọc public
      allow write: if request.auth != null; // ghi khi đã xác thực
    }

    // Mặc định: yêu cầu xác thực
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}


